    $("#logo").hide();
    $("#search").css("display", "inline");
    $("#search").click(function(){
        $("#searchbar").fadeIn();
        $("#searchhint").slideDown();
        $("#keyword").val("").focus();
    });
    $("#searchoption").change(function(){
      if($("#searchoption").val()=="person"){
